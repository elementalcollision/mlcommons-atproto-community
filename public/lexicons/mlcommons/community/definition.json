{
  "lexicon": 1,
  "id": "mlcommons.community.definition",
  "defs": {
    "main": {
      "type": "record",
      "description": "A community definition record for MLCommons community platform",
      "key": "tid",
      "record": {
        "type": "object",
        "required": ["name", "displayName", "createdAt"],
        "properties": {
          "name": {
            "type": "string",
            "description": "Unique community name (URL-friendly, lowercase, alphanumeric with hyphens)",
            "maxLength": 21,
            "minLength": 3,
            "pattern": "^[a-z0-9][a-z0-9-]*[a-z0-9]$"
          },
          "displayName": {
            "type": "string",
            "description": "Display name for community (any characters)",
            "maxLength": 64,
            "minLength": 1
          },
          "description": {
            "type": "string",
            "description": "Community description (supports markdown)",
            "maxLength": 3000
          },
          "avatar": {
            "type": "blob",
            "description": "Community avatar image",
            "accept": ["image/png", "image/jpeg", "image/webp"],
            "maxSize": 1000000
          },
          "banner": {
            "type": "blob",
            "description": "Community banner image",
            "accept": ["image/png", "image/jpeg", "image/webp"],
            "maxSize": 3000000
          },
          "visibility": {
            "type": "string",
            "description": "Community visibility setting",
            "knownValues": ["public", "unlisted", "private"],
            "default": "public"
          },
          "postPermissions": {
            "type": "string",
            "description": "Who can post in this community",
            "knownValues": ["anyone", "approved", "moderators"],
            "default": "anyone"
          },
          "rules": {
            "type": "array",
            "description": "Community rules",
            "items": {
              "type": "string",
              "maxLength": 500
            },
            "maxLength": 20
          },
          "tags": {
            "type": "array",
            "description": "Community tags for categorization",
            "items": {
              "type": "string",
              "maxLength": 50
            },
            "maxLength": 10
          },
          "createdAt": {
            "type": "string",
            "format": "datetime",
            "description": "Timestamp when community was created"
          }
        }
      }
    }
  }
}
